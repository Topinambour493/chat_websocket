<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="style/toggle.css" type="text/css">
    <script defer src="js/socket_rooms.js"></script>
    <script defer src="js/rules.js"></script>
</head>
<body>
<header>
    <div class="column-header">QUARTO!
        <div id="bouton_règles" class="règles button-19">Règles</div>
    </div>
    <div id="centre_header">
        <div class="centre">
            <div id="nickname">Bienvenue au QUARTO!</div>
            <div class="choix_nickname centre">
                <label for="username">Pseudo :</label>
                <input type="text" name="nicknameJ1" id="username" spellcheck="false"
                       oninput="localStorage.setItem('nickname', this.value);">
            </div>
        </div>
    </div>
    <div class="visibility-hidden column-header" >QUARTO!
        <div id="bouton_règles" class="règles button-19">Règles</div>
    </div>
    <%- include('../partials/rules'); %>
</header>
<main>
    <div id="toggle-mode">
        <div class="btn-container">
            <label class="switch btn-color-mode-switch">
                <input type="checkbox" name="mode" id="mode">
                <label for="mode" data-on="Classique" data-off="Expert" class="btn-color-mode-switch-inner">
                    <div>Classique</div>
                    <div>Expert</div>
                </label>
            </label>
        </div>
    </div>
    <button class="button-19" id="join_public">Jouer une partie publique</button>
    <button class="button-19" id="create_local">Jouer une partie locale</button>
    <button class="button-19" id="create_private">Créer une partie pivée</button>
    <form>
        <input id="room" type="text" oninput="this.value = this.value.toUpperCase()">
        <button class="button-19" type="submit" id="join_private"><label for="room">Rejoindre une partie privée</label></button>
    </form>
</main>
<%- include('../partials/footer'); %>
</body>
</html>